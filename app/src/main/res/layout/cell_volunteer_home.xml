            <!--android:layout_toEndOf="@+id/tvStatus_volunteer"-->
            <!--android:id="@+id/tvStatusData_volunteer"-->
            <!--android:textSize="16sp"-->
            <!--android:layout_marginStart="10dp"-->
            <!--android:layout_marginTop="8dp"/>-->
        <android.support.design.internal.BaselineLayout
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:id="@+id/baseline"
            android:layout_below="@+id/tvArea_volunteer"
            android:background="@color/colorPrimary"></android.support.design.internal.BaselineLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/baseline">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/accept"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/btnAccept"
                android:textColor="@color/colorPrimaryDark"
                android:background="@android:color/transparent"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:text="@string/view_details"
                android:id="@+id/btnViewDetails"
                android:textColor="@color/colorPrimaryDark"
                android:background="@android:color/transparent"/>
        </LinearLayout>


    </RelativeLayout>
</com.github.captain_miao.optroundcardview.OptRoundCardView>